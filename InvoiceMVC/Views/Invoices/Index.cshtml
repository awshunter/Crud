@model List<Invoice>
@{
    int totalPages = ViewBag.TotalPages ?? 1;
    int currentPage = ViewBag.CurrentPage ?? 1;
    
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><i class="bi bi-list-check"></i> قائمة الفواتير</h2>
    <a class="btn btn-success" asp-action="Create"><i class="bi bi-plus-lg"></i> فاتورة جديدة</a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>الرقم</th>
                    <th>العميل</th>
                    <th>التاريخ</th>
                    <th>الخدمة</th>
                    <th>السعر الإجمالي</th>
                    <th class="text-center">الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td><span class="badge bg-secondary">@item.Number</span></td>
                        <td>@item.ClientName</td>
                        <td>@item.IssueDate?.ToString("yyyy-MM-dd")</td>
                        <td>@item.Service</td>
                        <td class="fw-bold text-success">@((item.Quantity * item.UnitPrice).ToString("C"))</td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" title="تعديل"><i class="bi bi-pencil"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="حذف" onclick="return confirm('هل أنت متأكد من الحذف؟')"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<nav>
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
            </li>
        }
    </ul>
</nav>

    